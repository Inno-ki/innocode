---
import { Image } from 'astro:assets';
import LogoDark from '../assets/logo-dark.svg';
import LogoLight from '../assets/logo-light.svg';
import Screenshot from '../assets/lander/screenshot.png';

const features = [
  { title: 'InnoGPT Models', desc: 'EU-hosted models with one API for all powerful models - Claude, GPT, Gemini and more' },
  { title: 'LSP enabled', desc: 'Automatically loads the right LSPs for the LLM' },
  { title: 'Multi-session', desc: 'Start multiple agents in parallel on the same project' },
  { title: 'GitHub Copilot', desc: 'Log in with GitHub to use your Copilot account' },
  { title: 'ChatGPT Plus/Pro', desc: 'Log in with OpenAI to use your ChatGPT Plus or Pro account' },
  { title: 'Any model', desc: '75+ LLM providers through Models.dev, including local models' },
  { title: 'Any editor', desc: 'Available as a terminal interface, desktop app, and IDE extension' },
];

const faqs = [
  { q: 'What is InnoCode?', a: 'InnoCode is an AI coding agent that helps you write and run code with any AI model. It\'s available as a terminal-based interface, desktop app, or IDE extension.' },
  { q: 'How do I use InnoCode?', a: 'Install InnoCode using one of the methods above, configure your API key, and start coding with AI assistance.' },
  { q: 'Do I need extra AI subscriptions to use InnoCode?', a: 'No, you can use InnoGPT\'s EU-hosted models directly, or connect your existing subscriptions like GitHub Copilot or ChatGPT Plus.' },
  { q: 'Can I use my existing AI subscriptions with InnoCode?', a: 'Yes! InnoCode supports GitHub Copilot, ChatGPT Plus/Pro, and many other providers.' },
  { q: 'Can I only use InnoCode in the terminal?', a: 'No, InnoCode is available as a terminal app, desktop app, and IDE extension.' },
  { q: 'How much does InnoCode cost?', a: 'InnoCode is free to use. You only pay for the AI provider you choose to use.' },
  { q: 'What about data and privacy?', a: 'InnoCode does not store your code or context data. All processing happens locally or through direct API calls to your chosen provider.' },
];
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>InnoCode - The AI coding agent</title>
  <meta name="description" content="EU-hosted AI models with one API. Connect Claude, GPT, Gemini and more." />
  <link rel="icon" type="image/svg+xml" href="/favicon-v3.svg" />
  <style>
    :root {
      --bg: #131313;
      --bg-card: #1a1a1a;
      --text: #e8e8e8;
      --text-secondary: #888;
      --text-muted: #555;
      --border: #2a2a2a;
      --font: ui-monospace, 'SF Mono', Monaco, 'Cascadia Code', 'Roboto Mono', Consolas, monospace;
    }

    :root.light {
      --bg: #fafafa;
      --bg-card: #fff;
      --text: #1a1a1a;
      --text-secondary: #666;
      --text-muted: #999;
      --border: #e0e0e0;
    }

    * { margin: 0; padding: 0; box-sizing: border-box; }
    html { font-family: var(--font); background: var(--bg); color: var(--text); font-size: 15px; line-height: 1.6; }
    a { color: inherit; text-decoration: none; }

    .page { max-width: 900px; margin: 0 auto; border-left: 1px solid var(--border); border-right: 1px solid var(--border); min-height: 100vh; }

    /* Header */
    .header { padding: 1rem 2rem; display: flex; align-items: center; justify-content: space-between; border-bottom: 1px solid var(--border); }
    .logo img { height: 24px; }
    .logo .light-logo { display: none; }
    :root.light .logo .dark-logo { display: none; }
    :root.light .logo .light-logo { display: block; }

    .nav { display: flex; align-items: center; gap: 2.5rem; }
    .nav a { color: var(--text-secondary); font-size: 0.95rem; }
    .nav a:hover { color: var(--text); }

    .btn-free {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      padding: 0.5rem 1rem;
      border: 1px solid var(--border);
      border-radius: 4px;
      font-size: 0.9rem;
      background: var(--bg-card);
    }
    .btn-free:hover { background: var(--border); }

    .theme-toggle { background: none; border: none; cursor: pointer; color: var(--text-secondary); font-size: 1rem; padding: 0.25rem; }

    /* Sections */
    .section { padding: 3rem 2rem; border-bottom: 1px solid var(--border); }

    /* Announcement */
    .announcement { font-size: 0.9rem; color: var(--text-secondary); }
    .announcement-badge { display: inline-block; background: var(--border); color: var(--text); padding: 0.1rem 0.4rem; border-radius: 2px; font-size: 0.8rem; margin-right: 0.5rem; }
    .announcement a { color: var(--text-secondary); }
    .announcement a:hover { color: var(--text); }

    /* Hero */
    .hero h1 { font-size: 2.2rem; font-weight: 400; margin: 2rem 0 1rem; letter-spacing: -0.02em; }
    .hero-sub { color: var(--text-secondary); font-size: 1rem; line-height: 1.7; margin-bottom: 2rem; }

    /* Install box */
    .install-box { background: var(--bg-card); border: 1px solid var(--border); border-radius: 6px; margin-bottom: 3rem; }
    .install-tabs { display: flex; border-bottom: 1px solid var(--border); }
    .install-tab {
      padding: 0.75rem 1rem;
      background: none;
      border: none;
      color: var(--text-muted);
      font-size: 0.9rem;
      font-family: var(--font);
      cursor: pointer;
      border-bottom: 2px solid transparent;
      margin-bottom: -1px;
    }
    .install-tab:hover { color: var(--text-secondary); }
    .install-tab.active { color: var(--text); border-bottom-color: var(--text); }

    .install-cmd { padding: 1rem 1.25rem; display: flex; align-items: center; justify-content: space-between; }
    .install-cmd code { font-family: var(--font); color: var(--text-secondary); }
    .install-cmd code .hl { color: var(--text); }
    .install-cmd code .pipe { color: var(--text-muted); margin: 0 0.5rem; }

    .copy-btn { background: none; border: none; color: var(--text-muted); cursor: pointer; padding: 0.25rem; }
    .copy-btn:hover { color: var(--text); }

    /* Screenshot */
    .screenshot { border: 4px solid #f5a623; border-radius: 4px; overflow: hidden; }
    .screenshot img { width: 100%; height: auto; display: block; object-fit: contain; }

    /* Features */
    .section-title { font-size: 1.1rem; font-weight: 500; margin-bottom: 1.5rem; }
    .section-intro { color: var(--text-secondary); margin-bottom: 2rem; }

    .features-list { display: flex; flex-direction: column; gap: 0.75rem; margin-bottom: 2rem; }
    .feature-row { display: flex; gap: 0.75rem; }
    .feature-marker { color: var(--text-muted); flex-shrink: 0; }
    .feature-title { color: var(--text); font-weight: 500; }
    .feature-desc { color: var(--text-secondary); margin-left: 0.5rem; }

    .read-btn {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      padding: 0.6rem 1.25rem;
      border: 1px solid var(--border);
      border-radius: 4px;
      font-size: 0.9rem;
    }
    .read-btn:hover { background: var(--bg-card); }

    /* Privacy */
    .privacy-text { color: var(--text-secondary); }
    .privacy-text a { text-decoration: underline; }

    /* FAQ */
    .faq-item { border-bottom: 1px solid var(--border); }
    .faq-item:last-child { border-bottom: none; }
    .faq-q {
      display: flex;
      align-items: center;
      gap: 1rem;
      width: 100%;
      background: none;
      border: none;
      color: var(--text);
      font-size: 0.95rem;
      font-family: var(--font);
      text-align: left;
      padding: 1.25rem 0;
      cursor: pointer;
    }
    .faq-icon { color: var(--text-muted); font-size: 1.1rem; }
    .faq-a { display: none; padding: 0 0 1.25rem 2rem; color: var(--text-secondary); }
    .faq-item.open .faq-a { display: block; }
    .faq-item.open .faq-icon { transform: rotate(45deg); }

    /* Newsletter */
    .newsletter-form { display: flex; border: 1px solid var(--border); border-radius: 4px; overflow: hidden; max-width: 500px; margin-top: 1rem; }
    .newsletter-form input {
      flex: 1;
      padding: 0.75rem 1rem;
      border: none;
      background: var(--bg-card);
      color: var(--text);
      font-family: var(--font);
      font-size: 0.9rem;
    }
    .newsletter-form input::placeholder { color: var(--text-muted); }
    .newsletter-form button {
      padding: 0.75rem 1.5rem;
      border: none;
      border-left: 1px solid var(--border);
      background: var(--bg-card);
      color: var(--text);
      font-family: var(--font);
      font-size: 0.9rem;
      cursor: pointer;
    }
    .newsletter-form button:hover { background: var(--border); }

    /* Footer */
    .footer-links { display: grid; grid-template-columns: repeat(5, 1fr); border-bottom: 1px solid var(--border); }
    .footer-link { padding: 1.5rem; text-align: center; color: var(--text-secondary); font-size: 0.9rem; border-right: 1px solid var(--border); }
    .footer-link:last-child { border-right: none; }
    .footer-link:hover { color: var(--text); }
    .footer-link span { text-decoration: underline; }

    .footer-bottom { padding: 1.5rem 2rem; display: flex; justify-content: center; gap: 2rem; color: var(--text-muted); font-size: 0.85rem; }
    .footer-bottom a { color: var(--text-muted); }
    .footer-bottom a:hover { color: var(--text-secondary); }

    @media (max-width: 768px) {
      .nav { display: none; }
      .page { border: none; }
      .section { padding: 2rem 1rem; }
      .footer-links { grid-template-columns: repeat(2, 1fr); }
    }

    .cmd-panel { display: none; }
    .cmd-panel.active { display: inline; }
  </style>
</head>
<body>
  <div class="page">
    <header class="header">
      <a href="/" class="logo">
        <img src={LogoDark.src} alt="InnoCode" class="dark-logo" />
        <img src={LogoLight.src} alt="InnoCode" class="light-logo" />
      </a>
      <nav class="nav">
        <a href="https://github.com/InnoKI/innocode" target="_blank">GitHub</a>
        <a href="/intro">Docs</a>
        <a href="/enterprise">Enterprise</a>
      </nav>
      <div style="display: flex; align-items: center; gap: 0.75rem;">
        <button class="theme-toggle" id="theme-toggle" aria-label="Toggle theme">☀</button>
        <a href="/intro" class="btn-free">↓ Free</a>
      </div>
    </header>

    <section class="section announcement">
      <span class="announcement-badge">New</span>
      Desktop app available in beta on macOS, Windows, and Linux. <a href="/ide">Download now</a>
    </section>

    <section class="section">
      <h1 class="hero h1">The AI coding agent</h1>
      <p class="hero-sub">EU-hosted models included or connect any model from any provider, including Claude, GPT, Gemini and more.</p>

      <div class="install-box">
        <div class="install-tabs">
          <button class="install-tab active" data-cmd="curl">curl</button>
          <button class="install-tab" data-cmd="npm">npm</button>
          <button class="install-tab" data-cmd="bun">bun</button>
          <button class="install-tab" data-cmd="brew">brew</button>
          <button class="install-tab" data-cmd="paru">paru</button>
        </div>
        <div class="install-cmd">
          <code>
            <span class="cmd-panel active" data-cmd="curl">curl -fsSL https://<span class="hl">innocode.io/install</span><span class="pipe">|</span>bash</span>
            <span class="cmd-panel" data-cmd="npm">npm install -g <span class="hl">@innogpt/innocode</span></span>
            <span class="cmd-panel" data-cmd="bun">bun install -g <span class="hl">@innogpt/innocode</span></span>
            <span class="cmd-panel" data-cmd="brew">brew install <span class="hl">InnoKI/tap/innocode</span></span>
            <span class="cmd-panel" data-cmd="paru">paru -S <span class="hl">innocode-bin</span></span>
          </code>
          <button class="copy-btn" id="copy-btn" aria-label="Copy">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <rect x="9" y="9" width="13" height="13" rx="2"></rect>
              <path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"></path>
            </svg>
          </button>
        </div>
      </div>

      <div class="screenshot">
        <Image src={Screenshot} alt="InnoCode in action" />
      </div>
    </section>

    <section class="section">
      <h2 class="section-title">What is InnoCode?</h2>
      <p class="section-intro">InnoCode is an AI coding agent that helps you write code in your terminal, IDE, or desktop.</p>

      <div class="features-list">
        {features.map(f => (
          <div class="feature-row">
            <span class="feature-marker">[*]</span>
            <span><span class="feature-title">{f.title}</span><span class="feature-desc">{f.desc}</span></span>
          </div>
        ))}
      </div>

      <a href="/intro" class="read-btn">Read docs →</a>
    </section>

    <section class="section">
      <h2 class="section-title">Built for privacy first</h2>
      <p class="privacy-text">[*] InnoCode does not store any of your code or context data, so that it can operate in privacy sensitive environments. Learn more about <a href="/enterprise">privacy</a>.</p>
    </section>

    <section class="section">
      <h2 class="section-title">FAQ</h2>
      <div class="faq-list">
        {faqs.map(faq => (
          <div class="faq-item">
            <button class="faq-q">
              <span class="faq-icon">+</span>
              {faq.q}
            </button>
            <div class="faq-a">{faq.a}</div>
          </div>
        ))}
      </div>
    </section>

    <section class="section">
      <h2 class="section-title">Be the first to know when we release new products</h2>
      <p style="color: var(--text-secondary); margin-bottom: 0;">Join the waitlist for early access.</p>
      <form class="newsletter-form">
        <input type="email" placeholder="Email address" required />
        <button type="submit">Subscribe</button>
      </form>
    </section>

    <footer>
      <div class="footer-links">
        <a href="https://github.com/InnoKI/innocode" target="_blank" class="footer-link">GitHub</a>
        <a href="/intro" class="footer-link">Docs</a>
        <a href="https://github.com/InnoKI/innocode/releases" target="_blank" class="footer-link"><span>Changelog</span></a>
        <a href="#" class="footer-link">Slack</a>
        <a href="#" class="footer-link">X</a>
      </div>
      <div class="footer-bottom">
        <span>©2026 InnoGPT</span>
        <a href="/enterprise">Privacy</a>
      </div>
    </footer>
  </div>

  <script>
    const toggle = document.getElementById('theme-toggle');
    function setTheme(isDark: boolean) {
      document.documentElement.classList.toggle('light', !isDark);
      if (toggle) toggle.textContent = isDark ? '☀' : '☾';
      localStorage.setItem('theme', isDark ? 'dark' : 'light');
    }
    const saved = localStorage.getItem('theme');
    setTheme(saved ? saved === 'dark' : true);
    toggle?.addEventListener('click', () => setTheme(document.documentElement.classList.contains('light')));

    const tabs = document.querySelectorAll('.install-tab');
    const panels = document.querySelectorAll('.cmd-panel');
    const cmds: Record<string, string> = {
      curl: 'curl -fsSL https://innocode.io/install | bash',
      npm: 'npm install -g @innogpt/innocode',
      bun: 'bun install -g @innogpt/innocode',
      brew: 'brew install InnoKI/tap/innocode',
      paru: 'paru -S innocode-bin',
    };
    let current = 'curl';
    tabs.forEach(tab => {
      tab.addEventListener('click', () => {
        current = (tab as HTMLElement).dataset.cmd || 'curl';
        tabs.forEach(t => t.classList.remove('active'));
        tab.classList.add('active');
        panels.forEach(p => p.classList.toggle('active', (p as HTMLElement).dataset.cmd === current));
      });
    });

    const copyBtn = document.getElementById('copy-btn');
    copyBtn?.addEventListener('click', () => {
      navigator.clipboard.writeText(cmds[current]);
      if (copyBtn) copyBtn.textContent = '✓';
      setTimeout(() => {
        if (copyBtn) copyBtn.innerHTML = '<svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect x="9" y="9" width="13" height="13" rx="2"></rect><path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"></path></svg>';
      }, 2000);
    });

    document.querySelectorAll('.faq-q').forEach(btn => {
      btn.addEventListener('click', () => btn.parentElement?.classList.toggle('open'));
    });
  </script>
</body>
</html>
