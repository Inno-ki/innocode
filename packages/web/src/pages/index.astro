---
import { Image } from 'astro:assets';
import Screenshot from '../assets/lander/screenshot.gif';

const features = [
  { title: 'InnoGPT Models', desc: 'EU-hosted, GDPR-first models with a single API key' },
  { title: 'Privacy by default', desc: 'Your code stays local and is never used for training' },
  { title: 'LSP enabled', desc: 'Automatically loads the right LSPs for the model you use' },
  { title: 'Multi-session', desc: 'Run multiple agents in parallel on the same project' },
  { title: 'Every surface', desc: 'CLI, desktop, and IDE extension with consistent behavior' },
  { title: 'Enterprise-ready', desc: 'Central config, access control, and compliance-friendly hosting' },
];

const faqs = [
  { q: 'What Is InnoCode?', a: 'InnoCode is an AI coding agent for the terminal, desktop, and IDE. It ships with InnoGPT — our EU-hosted model gateway.' },
  { q: 'How Do I Get Started?', a: 'Install InnoCode, sign in to InnoGPT to create an API key, and start coding.' },
  { q: 'Do I Need Other AI Subscriptions?', a: 'No. InnoCode is optimized for InnoGPT, so a single InnoGPT key powers everything.' },
  { q: 'Can I Use Other Providers?', a: 'Not by default. InnoCode is configured for InnoGPT to guarantee GDPR-grade hosting and consistent behavior.' },
  { q: 'Where Is My Data Processed?', a: 'Requests route through InnoGPT’s EU-hosted infrastructure. InnoCode does not store your code or context.' },
  { q: 'Is There a Desktop App?', a: 'Yes — InnoCode Desktop is available for macOS, Windows, and Linux.' },
];
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>InnoCode - The AI Coding Agent</title>
  <meta name="description" content="EU-hosted AI models with one API. Connect Claude, GPT, Gemini and more." />
  <link rel="icon" type="image/svg+xml" href="/favicon-v3.svg" />
  <style>
    @import url("https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300;400;500;600;700&family=JetBrains+Mono:wght@400;600&display=swap");

    :root {
      --bg: #0e1110;
      --bg-card: #141818;
      --text: #f3f4f5;
      --text-secondary: #b1b7b4;
      --text-muted: #6e7673;
      --border: #242a28;
      --accent: #62e6b8;
      --accent-2: #f2a93b;
      --font: "Space Grotesk", "Segoe UI", system-ui, -apple-system, sans-serif;
      --mono: "JetBrains Mono", ui-monospace, "SF Mono", Menlo, Consolas, monospace;
    }

    :root.light {
      --bg: #f7f7f6;
      --bg-card: #ffffff;
      --text: #121313;
      --text-secondary: #4e5552;
      --text-muted: #8a918e;
      --border: #e1e4e2;
      --accent: #2f9f75;
      --accent-2: #c87b12;
    }

    * { margin: 0; padding: 0; box-sizing: border-box; }
    html { font-family: var(--font); background: var(--bg); color: var(--text); font-size: 15px; line-height: 1.6; color-scheme: dark; }
    :root.light { color-scheme: light; }
    body {
      min-height: 100vh;
      background:
        radial-gradient(1200px 600px at 80% -10%, rgba(98, 230, 184, 0.12), transparent 55%),
        radial-gradient(900px 500px at -10% 20%, rgba(242, 169, 59, 0.12), transparent 55%),
        var(--bg);
      -webkit-tap-highlight-color: transparent;
      overflow-x: hidden;
    }
    a { color: inherit; text-decoration: none; }
    a:focus-visible, button:focus-visible, input:focus-visible { outline: 2px solid var(--accent); outline-offset: 2px; }
    button, .btn-free, .read-btn, .nav a, .footer-link { touch-action: manipulation; }

    .page { max-width: 960px; margin: 0 auto; border-left: 1px solid var(--border); border-right: 1px solid var(--border); min-height: 100vh; }

    /* Header */
    .header { padding: 1rem 2rem; display: flex; align-items: center; justify-content: space-between; border-bottom: 1px solid var(--border); }
    .logo { display: inline-flex; align-items: center; }
    .logo-ascii {
      font-family: var(--font-ui, "IBM Plex Mono", "SF Mono", ui-monospace, monospace);
      font-size: 0.42rem;
      line-height: 0.9;
      letter-spacing: 0.08em;
      color: var(--text);
      white-space: pre;
      display: block;
    }
    .sr-only {
      position: absolute;
      width: 1px;
      height: 1px;
      padding: 0;
      margin: -1px;
      overflow: hidden;
      clip: rect(0, 0, 0, 0);
      white-space: nowrap;
      border: 0;
    }

    .nav { display: flex; align-items: center; gap: 2.5rem; }
    .nav a { color: var(--text-secondary); font-size: 0.95rem; }
    .nav a:hover { color: var(--text); }

    .btn-free {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      padding: 0.5rem 1rem;
      border: 1px solid var(--border);
      border-radius: 999px;
      font-size: 0.9rem;
      background: linear-gradient(120deg, rgba(98, 230, 184, 0.15), rgba(242, 169, 59, 0.1));
    }
    .btn-free:hover { background: linear-gradient(120deg, rgba(98, 230, 184, 0.3), rgba(242, 169, 59, 0.2)); }

    .theme-toggle { background: none; border: none; cursor: pointer; color: var(--text-secondary); font-size: 1rem; padding: 0.25rem; }
    .theme-toggle:hover { color: var(--text); }

    /* Sections */
    .section { padding: 3.2rem 2rem; border-bottom: 1px solid var(--border); animation: fadeUp 0.6s ease both; animation-delay: var(--delay, 0s); }

    /* Announcement */
    .announcement { font-size: 0.9rem; color: var(--text-secondary); display: flex; align-items: center; gap: 0.6rem; flex-wrap: wrap; }
    .announcement-badge { display: inline-block; background: rgba(98, 230, 184, 0.15); color: var(--accent); padding: 0.15rem 0.5rem; border-radius: 999px; font-size: 0.78rem; margin-right: 0.3rem; }
    .announcement a { color: var(--text-secondary); }
    .announcement a:hover { color: var(--text); }

    /* Hero */
    .hero h1 { font-size: clamp(2.4rem, 5vw, 3.4rem); font-weight: 600; margin: 1.5rem 0 1rem; letter-spacing: -0.03em; text-wrap: balance; }
    .hero-sub { color: var(--text-secondary); font-size: 1.05rem; line-height: 1.7; margin-bottom: 2rem; max-width: 34rem; text-wrap: balance; }

    /* Install box */
    .install-box { background: var(--bg-card); border: 1px solid var(--border); border-radius: 6px; margin-bottom: 3rem; }
    .install-tabs { display: flex; border-bottom: 1px solid var(--border); }
    .install-tab {
      padding: 0.75rem 1rem;
      background: none;
      border: none;
      color: var(--text-muted);
      font-size: 0.9rem;
      font-family: var(--font);
      cursor: pointer;
      border-bottom: 2px solid transparent;
      margin-bottom: -1px;
    }
    .install-tab:hover { color: var(--text-secondary); }
    .install-tab.active { color: var(--text); border-bottom-color: var(--text); }

    .install-cmd { padding: 1rem 1.25rem; display: flex; align-items: center; justify-content: space-between; }
    .install-cmd code { font-family: var(--mono); color: var(--text-secondary); }
    .install-cmd code .hl { color: var(--text); }
    .install-cmd code .pipe { color: var(--text-muted); margin: 0 0.5rem; }

    .copy-btn { background: none; border: none; color: var(--text-muted); cursor: pointer; padding: 0.25rem; }
    .copy-btn:hover { color: var(--text); }

    /* Screenshot */
    .screenshot { border-radius: 10px; overflow: hidden; box-shadow: 0 18px 50px rgba(0, 0, 0, 0.3); }
    .screenshot img { width: 100%; height: auto; display: block; object-fit: contain; }

    /* Features */
    .section-title { font-size: 1.2rem; font-weight: 600; margin-bottom: 1.5rem; letter-spacing: -0.01em; text-wrap: balance; }
    .section-intro { color: var(--text-secondary); margin-bottom: 2rem; }

    .features-list { display: flex; flex-direction: column; gap: 0.75rem; margin-bottom: 2rem; }
    .feature-row { display: flex; gap: 0.75rem; }
    .feature-row span:last-child { min-width: 0; overflow-wrap: anywhere; }
    .feature-marker { color: var(--text-muted); flex-shrink: 0; }
    .feature-title { color: var(--text); font-weight: 500; }
    .feature-desc { color: var(--text-secondary); margin-left: 0.5rem; }

    .read-btn {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      padding: 0.6rem 1.25rem;
      border: 1px solid var(--border);
      border-radius: 999px;
      font-size: 0.9rem;
    }
    .read-btn:hover { background: var(--bg-card); }

    /* Privacy */
    .privacy-text { color: var(--text-secondary); }
    .privacy-text a { text-decoration: underline; }

    /* FAQ */
    .faq-item { border-bottom: 1px solid var(--border); }
    .faq-item:last-child { border-bottom: none; }
    .faq-q {
      display: flex;
      align-items: center;
      gap: 1rem;
      width: 100%;
      background: none;
      border: none;
      color: var(--text);
      font-size: 0.95rem;
      font-family: var(--font);
      text-align: left;
      padding: 1.25rem 0;
      cursor: pointer;
    }
    .faq-q:hover { color: var(--text-secondary); }
    .faq-icon { color: var(--text-muted); font-size: 1.1rem; }
    .faq-a { display: none; padding: 0 0 1.25rem 2rem; color: var(--text-secondary); }
    .faq-item.open .faq-a { display: block; }
    .faq-item.open .faq-icon { transform: rotate(45deg); }

    /* Footer */
    .footer-links { display: grid; grid-template-columns: repeat(3, 1fr); border-bottom: 1px solid var(--border); }
    .footer-link { padding: 1.5rem; text-align: center; color: var(--text-secondary); font-size: 0.9rem; border-right: 1px solid var(--border); }
    .footer-link:last-child { border-right: none; }
    .footer-link:hover { color: var(--text); }
    .footer-link span { text-decoration: underline; }

    .footer-bottom { padding: 1.5rem 2rem; display: flex; justify-content: center; gap: 2rem; color: var(--text-muted); font-size: 0.85rem; }
    .footer-bottom a { color: var(--text-muted); }
    .footer-bottom a:hover { color: var(--text-secondary); }

    @media (max-width: 768px) {
      .nav { display: none; }
      .page { border: none; }
      .section { padding: 2rem 1rem; }
      .footer-links { grid-template-columns: repeat(2, 1fr); }
    }

    .cmd-panel { display: none; }
    .cmd-panel.active { display: inline; }

    .skip-link {
      position: absolute;
      top: -40px;
      left: 1rem;
      background: var(--accent);
      color: #0b0b0b;
      padding: 0.5rem 0.75rem;
      border-radius: 6px;
      font-weight: 600;
      z-index: 10;
    }
    .skip-link:focus { top: 1rem; }

    @keyframes fadeUp {
      from { opacity: 0; transform: translateY(14px); }
      to { opacity: 1; transform: translateY(0); }
    }

    @media (prefers-reduced-motion: reduce) {
      * { animation: none !important; transition: none !important; }
    }
  </style>
</head>
<body>
  <div class="page">
